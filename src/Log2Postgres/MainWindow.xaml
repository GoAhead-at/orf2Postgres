<Window x:Class="Log2Postgres.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Log2Postgres"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        Title="ORF Log File Watcher" Height="720" Width="1000">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with service status -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,10" Padding="10">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Margin="0,0,5,0" Text="Service Status:"/>
                    <Border x:Name="ServiceStatusIndicator" Width="15" Height="15" CornerRadius="7.5" 
                            Background="Red" Margin="0,0,10,0"/>
                    <TextBlock x:Name="ServiceStatusText" VerticalAlignment="Center" Text="Stopped"/>
                </StackPanel>
                <TextBlock Text="ORF Log File Watcher" FontSize="20" FontWeight="Bold"/>
            </DockPanel>
        </materialDesign:Card>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Configuration -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,5,0" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Configuration Title -->
                        <TextBlock Text="Configuration" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <!-- Database Configuration -->
                        <Expander Header="Database Connection" IsExpanded="True" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <TextBlock Text="Host / Server:" Margin="0,5,0,2"/>
                                <TextBox x:Name="DbHost" Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Port:" Margin="0,5,0,2"/>
                                <TextBox x:Name="DbPort" Text="5432" Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Username:" Margin="0,5,0,2"/>
                                <TextBox x:Name="DbUsername" Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Password:" Margin="0,5,0,2"/>
                                <PasswordBox x:Name="DbPassword" Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Database Name:" Margin="0,5,0,2"/>
                                <TextBox x:Name="DbName" Text="postgres" Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Schema:" Margin="0,5,0,2"/>
                                <TextBox x:Name="DbSchema" Text="public" Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Table Name:" Margin="0,5,0,2"/>
                                <TextBox x:Name="DbTable" Text="orf_logs" Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Connection Timeout (seconds):" Margin="0,5,0,2"/>
                                <TextBox x:Name="DbTimeout" Text="30" Margin="0,0,0,10"/>
                                
                                <Button x:Name="TestConnectionBtn" Content="Test Connection" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                        Margin="0,5,0,5" Click="TestConnectionBtn_Click"/>
                                <Button x:Name="VerifyTableBtn" Content="Verify/Create Table" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                        Margin="0,5,0,5" Click="VerifyTableBtn_Click"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Log File Configuration -->
                        <Expander Header="Log File Settings" IsExpanded="True" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <TextBlock Text="Log Directory Path:" Margin="0,5,0,2"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="LogDirectory" Grid.Column="0" Margin="0,0,5,0"/>
                                    <Button x:Name="BrowseBtn" Grid.Column="1" Style="{StaticResource MaterialDesignFlatButton}" 
                                            Content="Browse" Margin="0" Click="BrowseBtn_Click"/>
                                </Grid>
                                
                                <TextBlock Text="Log File Pattern:" Margin="0,10,0,2"/>
                                <TextBox x:Name="LogFilePattern" Text="orfee-{Date:yyyy-MM-dd}.log" Margin="0,0,0,2"/>
                                <TextBlock Text="Use {Date:format} to specify date patterns" FontStyle="Italic" FontSize="11" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Polling Interval (seconds):" Margin="0,5,0,2"/>
                                <TextBox x:Name="PollingInterval" Text="5" Margin="0,0,0,10"/>
                                
                                <Button x:Name="ValidatePathBtn" Content="Validate Path" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                        Margin="0,5,0,5" Click="ValidatePathBtn_Click"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Service Control -->
                        <Expander Header="Service Control" IsExpanded="True" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <Button x:Name="InstallServiceBtn" Content="Install Service" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                            Margin="0,0,5,0" Click="InstallServiceBtn_Click"/>
                                    <Button x:Name="UninstallServiceBtn" Content="Uninstall Service" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                            Click="UninstallServiceBtn_Click"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <Button x:Name="StartBtn" Content="Start Processing" Style="{StaticResource MaterialDesignRaisedButton}" 
                                            Background="{DynamicResource PrimaryHueMidBrush}" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" 
                                            Margin="0,0,5,0" Click="StartBtn_Click"/>
                                    <Button x:Name="StopBtn" Content="Stop Processing" Style="{StaticResource MaterialDesignRaisedButton}" 
                                            Background="Red" Foreground="White" Click="StopBtn_Click" IsEnabled="False"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Configuration Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button x:Name="SaveConfigBtn" Content="Save Configuration" Style="{StaticResource MaterialDesignRaisedButton}" 
                                    Background="{DynamicResource PrimaryHueMidBrush}" Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" 
                                    Margin="0,0,5,0" Click="SaveConfigBtn_Click"/>
                            <Button x:Name="ResetConfigBtn" Content="Reset to Defaults" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Click="ResetConfigBtn_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
            
            <!-- Right Panel - Status and Logs -->
            <materialDesign:Card Grid.Column="1" Margin="5,0,0,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Status Information -->
                    <GroupBox Grid.Row="0" Header="Processing Status" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock>
                                    <Run Text="Current File: "/>
                                    <Run x:Name="CurrentFileText" Text="None"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Current Position: "/>
                                    <Run x:Name="CurrentPositionText" Text="0"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Lines Processed: "/>
                                    <Run x:Name="LinesProcessedText" Text="0"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock>
                                    <Run Text="Status: "/>
                                    <Run x:Name="ProcessingStatusText" Text="Idle"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Last Error: "/>
                                    <Run x:Name="LastErrorText" Text="None"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Log Viewer -->
                    <GroupBox Grid.Row="1" Header="Log Output">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Log Filter Controls -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                <ToggleButton x:Name="ShowStatusToggle" Content="Status" IsChecked="True" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                              Margin="0,0,5,0" Click="LogFilterToggle_Click"/>
                                <ToggleButton x:Name="ShowWarningsToggle" Content="Warnings" IsChecked="True" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                              Margin="0,0,5,0" Click="LogFilterToggle_Click"/>
                                <ToggleButton x:Name="ShowErrorsToggle" Content="Errors" IsChecked="True" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                              Margin="0,0,5,0" Click="LogFilterToggle_Click"/>
                                <Button x:Name="ClearLogsBtn" Content="Clear Logs" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                        Margin="10,0,0,0" Click="ClearLogsBtn_Click"/>
                            </StackPanel>
                            
                            <!-- Log Text Box -->
                            <TextBox x:Name="LogTextBox" Grid.Row="1" IsReadOnly="True" TextWrapping="Wrap" 
                                     VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Database Tools -->
                    <GroupBox Grid.Row="2" Header="Database Tools" Margin="0,10,0,0">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock>
                                        <Run Text="Database Status: "/>
                                        <Run x:Name="DbStatusText" Text="Unknown"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock>
                                        <Run Text="Row Count: "/>
                                        <Run x:Name="RowCountText" Text="0"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                            <Button x:Name="ViewSampleDataBtn" Content="View Sample Data" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Margin="0,5,0,0" Click="ViewSampleDataBtn_Click"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </materialDesign:Card>
        </Grid>
        
        <!-- Footer -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <TextBlock x:Name="StatusBarText" Text="Ready"/>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0"/>
            <TextBlock x:Name="LastUpdatedText" Text=""/>
        </StatusBar>
    </Grid>
</Window>
